{
  "name": "my-typescript-project",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build:ts": "tsc",
    "build": "npm run build:ts && cp ./index.html ./dist/index.html && cp ./index.css ./dist/index.css",
    "start": "npm run build && live-server dist",
    "watch": "tsc --watch",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "live-server": "^1.2.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "tailwindcss": "^4.1.12"
  }
}
